      </svg>
    </div>

    <div id="spotify-content"  class="flex items-center justify-between gap-3 min-w-0" >
        
      <img id="spotify-art" width="40" height="40" src="" class="w-10 h-10 rounded-md object-cover shadow-sm group-hover:shadow-md transition-shadow" />
        
      <div class="flex flex-col min-w-0 flex-1">  
        <span id="spotify-title" class="text-sm font-semibold text-base-content opacity-90 leading-tight group-hover:text-primary transition-all duration-300 mb-0.5 line-clamp-2"></span>
        <span id="spotify-artist" class="text-[11px] opacity-60 italic leading-tight line-clamp-1"></span>
      </div>

      <div class="flex gap-[2px] items-end h-3 w-4 flex-shrink-0 mb-1">
        <div class="w-[2.5px] bg-primary animate-[music-bar_0.8s_ease-in-out_infinite]"></div>
        <div class="w-[2.5px] bg-primary animate-[music-bar_1.2s_ease-in-out_infinite]"></div>
        <div class="w-[2.5px] bg-primary animate-[music-bar_1.0s_ease-in-out_infinite]"></div>
      </div>

    </div>
  </a>
</div>

<style>

  #spotify-container {
    transition: opacity 0.4s ease-in-out, transform 0.8s ease, height 0.5s ease;
    opacity: 0;
    overflow: hidden;
    box-sizing: border-box;
    contain: layout;
  }

  #spotify-container.is-visible {
    opacity: 1;
  }
  
  /* Fade tra le canzoni */
  #spotify-content {
    opacity: 1;
    transition: opacity 0.4s ease-in-out;
  }

  #spotify-content.fade-out {
    opacity: 0;
  }

  #spotify-container.hidden {
    display: none; /* Tailwind lo gestisce già, ma per sicurezza */
  }

  @keyframes music-bar {
    0%, 100% { height: 25%; }
    50% { height: 100%; }
  }

</style>

<script>

function updateDOM(data) {
  // Selezioniamo gli elementi
  const art = document.getElementById('spotify-art') as HTMLImageElement;
  const title = document.getElementById('spotify-title');
  const artist = document.getElementById('spotify-artist');
  const link = document.getElementById('spotify-link-element') as HTMLAnchorElement;

  if (!art || !title || !artist || !link) return;

  // Iniettiamo i nuovi dati
  title.innerText = data.title;
  artist.innerText = data.artist;
  link.href = data.songUrl;
  
  // Gestiamo l'immagine: se c'è la mostriamo, altrimenti la nascondiamo
  if (data.albumArt) {

    // 1. Prima di tutto nascondiamo, così non vedo l'errore se il link è rotto
    art.classList.add('hidden'); 
    
    // 2. Definisci cosa fare SE carica correttamente
    art.onload = () => {
      art.classList.remove('hidden');
    };

    // 3. Definisci cosa fare SE fallisce (resta nascosta)
    art.onerror = () => {
      art.classList.add('hidden');
      art.src = ""; // Pulisce il src per sicurezza
    };

    // 4. SOLO ORA assegna il link
    art.src = data.albumArt;

  } else {
    art.classList.add('hidden');
    art.src = "";
  }

}

  // Usiamo una funzione che può essere chiamata ripetutamente
  async function updateSpotify() {
    const container = document.getElementById('spotify-container');
    const content = document.getElementById('spotify-content');
    const art = document.getElementById('spotify-art') as HTMLImageElement;
    const title = document.getElementById('spotify-title');
    const artist = document.getElementById('spotify-artist');
    const link = document.getElementById('spotify-link-element') as HTMLAnchorElement;

    // --- CONFIGURAZIONE ---
    const VERCEL_URL = 'https://spotify-bridge.vercel.app/api/now-playing.js';
    // ----------------------

    if (!container || !art || !title || !artist || !link || !content) return;

    try {

      const res = await fetch(VERCEL_URL);
      if (!res.ok) throw new Error('Network error');
      const data = await res.json();

      if (data.isPlaying) {

        if (container.classList.contains('hidden')) {
          updateDOM(data); // Inseriamo i dati prima di mostrarlo
          container.classList.remove('hidden'); // Lo rendiamo disponibile al DOM
          
          // Questa riga sembra inutile ma è il segreto: "legge" l'altezza per obbligare
          // il browser a registrare che ora l'elemento esiste prima di animarlo.
          void container.offsetWidth; 

          // 4. Ora attiviamo l'opacità
          container.classList.add('is-visible');
        }
        
        // 1. Inizia il Fade Out (se era già visibile e il titolo è diverso)
        else if (title.innerText !== data.title) {

          content.classList.add('fade-out'); // Svanisce solo il contenuto interno
      
          setTimeout(async () => {
            // Aggiorna i dati mentre è invisibile
            updateDOM(data); 

            container.classList.add('is-visible');
            content.classList.remove('fade-out'); // Ritorna visibile

            content.classList.remove('fade-out'); // Ritorna visibile
            
          }, 400);

        } else {
          updateDOM(data);
          container.classList.add('is-visible');
        }
      } else {
        container.classList.remove('is-visible');
        setTimeout(() => container.classList.add('hidden'), 600);
      }
    } catch (e) {
      console.error("Spotify Widget Error:", e);
      container.classList.add('hidden');
    }
  }

  // Funzione che controlla se la pagina è visibile
  function updateWithVisibilityCheck() {
    // Se l'utente ha cambiato scheda o ha minimizzato il browser, non fare nulla
    if (document.hidden) {
      console.log("Widget in pausa: la scheda non è visibile");
      return;
    }
    updateSpotify();
  }

  // 1. Esegui al primo caricamento
  updateSpotify();

  // 2. Aggiornamento periodico
  setInterval(updateWithVisibilityCheck, 30000);

  // 3. Aggiorna quando l'utente ritorna alla scheda
  document.addEventListener('visibilitychange', () => {
    if (!document.hidden) {
      updateSpotify();
    }
  });
  
</script>

