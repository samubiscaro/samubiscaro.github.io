  <a 
    href="spotify-url" 
    target="_blank" 
    rel="noopener noreferrer"
    class="group flex flex-col gap-0 px-2 py-2 border-t border-base-300 transition-all hover:bg-base-300/50 hover:rounded-xl"
    id="spotify-link-element"
  >
    <div class="flex items-center justify-between mb-1">
      <span class="text-[9px] uppercase tracking-[0.2em] font-bold opacity-40 leading-none">
        Now Playing
      </span>
      <svg 
        class="w-3 h-3 text-base-content opacity-20 group-hover:opacity-100 group-hover:text-primary transition-all duration-300"
        viewBox="0 0 24 24" 
        fill="currentColor"
      >
