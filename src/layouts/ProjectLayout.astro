---
import { type ProjectSchema } from "../content/config"; 
import BaseLayout from "./BaseLayout.astro";
import dayjs from "dayjs";
import localizedFormat from "dayjs/plugin/localizedFormat";

export interface Props extends ProjectSchema {}

const { title, description, pubDate, heroImage, imageCredit } = Astro.props;
dayjs.extend(localizedFormat);
const displayDate = dayjs(pubDate).format("ll")
import { Image } from "astro:assets";
---

<BaseLayout title={title} description={description} image={heroImage?.src} ogType="article" sideBarActiveItemID="projects">
  <main class="md:flex md:justify-center px-4">
    <article class="prose prose-lg max-w-[850px] prose-img:mx-auto prose-headings:font-bold">
      
      {heroImage && (
        <div class="mb-0 group">
          <div class="not-prose relative w-full aspect-[21/9] overflow-hidden rounded-xl shadow-2xl group">
            <Image 
              width={2000} 
              height={850} 
              format="webp" 
              quality="max"
              src={heroImage} 
              alt={title} 
              class="object-cover w-full h-full m-0 transition-transform duration-500 group-hover:scale-105" 
            />
            <div class="absolute inset-0 ring-1 ring-inset ring-black/10 rounded-xl"></div>
          </div>
          <div class="flex justify-end -mt-0.5 pr-1"> 
            <p class="text-[9px] uppercase tracking-wider opacity-30 leading-none py-1">
              {imageCredit}
            </p>
          </div>
        </div>
      )}

      <header class="mb-0">
        <h1 class="text-4xl font-extrabold tracking-tight mb-1 text-base-content leading-tight">
          {title}
        </h1>
        {pubDate && (
          <time class="text-sm font-medium opacity-50 uppercase tracking-widest">
            {displayDate}
          </time>
        )}
        <div class="divider my-0" />
      </header>
      
      <div class="mt-0 leading-relaxed">
        <slot /> 
      </div>

    </article>
  </main>
</BaseLayout>